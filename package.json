{
  "name": "shell-spinners",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "lint": "tsc",
    "prepublish": "bun run lint && bun run build",
    "publish": "changesets version && bun publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}